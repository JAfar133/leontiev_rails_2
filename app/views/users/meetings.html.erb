<!-- app/views/users/favorites.html.erb -->
<%= link_to 'Back', meetings_path, class: "mb-5" %>
<h1>Your Meetings</h1>
<div>
  <% if @user_meetings.present? %>
    <ul class="list-group list-group-numbered">
      <% @user_meetings.each do |meeting| %>
        <li class="list-group-item d-flex justify-content-between align-items-start">
          <div class="ms-2 me-auto">
            <div class="fw-bold"><%= link_to meeting.title, meeting, class: "list-group-item-action link-dark stretched-link" %></div>
            <%= "by #{meeting.created_by.last_name} #{meeting.created_by.first_name} - #{meeting.created_at.strftime('%Y-%m-%d %H:%M')}" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>No favorite places yet.</p>
  <% end %>
</div>
